<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
        <link rel="stylesheet" href="/normalize.css" />
        <link rel="stylesheet" href="/skeleton.css" />
        <link rel="stylesheet" href="/showsched.css" />
    </head>
    <body>
        <div class="topnav">
            <% if(currentUser) { %>
            <a href="/">Home</a>
            <a href="/classes">Classes</a>
            <a class="active" href="/classes/scheduler">Scheduler</a>
            <a href="/classes/new">New Class</a>
            
            <form action="/sessions?_method=DELETE" method="POST">
                <input type="submit" value="Log Out" />
            </form>
            <% } else { %>
            <a href="/">Home</a>
            <a class="active" href="/classes">Classes</a>
            <a href="/classes/new">New Class</a>
            <a href="/about">About</a>
            <a id="signin" href="/users/new">Register</a>
            <a id="signin1" href="/sessions/new">Login</a>
            <% } %>
        </div><br>
        <div class="container">
            <button onclick="window.location.href='/classes/scheduler'">Back</button><br>
            <button onclick="window.location.href='/classes/scheduler/<%=schedule._id %>/edit'">Edit</button><br>
            <form id="left" action="/classes/scheduler/<%=schedule._id %>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE" />
            </form>
            <h1><%=clas.name %></h1><br>
            <img src="<%=clas.img %>">
            <table>
                <tr>
                    <td>
                        The instructor:<br> <%=clas.instructor %>
                    </td>
                    <td>
                       Details:<br><%=clas.description %>
                    </td>
                     <td>
                           The price: <br>$<%=clas.price %>
                    </td>
                    <td>
                        Available: <br><%=clas.day %>
                    </td>
                </tr>
                    <tr>
                        <td>
                            <% if(schedule.completed === false){ %>
                                Course Incomeplete
                           <% } else { %>
                                Course Completed!
                            <% } %>
                        </td>
                        <td>
                            Notes:<br><%=schedule.note %>
                        </td>
                    </tr>
                </table>
            </div>
        <style type="text/css">
           
            </style>
    </body>
</html>